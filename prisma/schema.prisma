generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Agent {
  id        String        @id @default(uuid())
  name      String
  role      String
  status    String // 'RUNNING', 'IDLE', 'ERROR', 'OFFLINE'
  version   String
  message   String
  imageUrl  String
  color     String
  progress  Int           @default(0)
  memories  MemoryEntry[]
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
}

model LogEntry {
  id        String   @id @default(uuid())
  level     String
  source    String
  message   String
  createdAt DateTime @default(now())
}

model MemoryEntry {
  id        String   @id @default(uuid())
  agentId   String
  agent     Agent    @relation(fields: [agentId], references: [id])
  key       String
  value     String
  type      String // 'FACT', 'OBSERVATION', 'SYNTHESIS'
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
